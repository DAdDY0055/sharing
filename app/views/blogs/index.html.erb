<div class="container-fluid">
<h1>一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>

    <td><div class="width"><%= blog.content %></div></td>
    <td><button><%= link_to '詳細', blog_path(blog.id) %></button></td>
    <% if logged_in? %>
    <% if blog.user_id == current_user.id %>
    <td><button><%= link_to "編集", edit_blog_path(blog.id), data: { confirm: '本当に編集していいですか？' } %></button></td>
    <td><button><%= link_to '削除', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></button></td>
    <% end %>
    <% end %>
  </tr>
<% end %>
</table>

<br>
 <%= paginate @blogs %>
<button><%= link_to '新しく情報を登録する', new_blog_path %></button>
</div>
