<div class="container-fluid">
<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @blog, url: blogs_path, local: true) do |form| %>
  <p><%= form.hidden_field :title %></p>
  <p><%= form.hidden_field :content %></p>
  <p><%= form.hidden_field :image_cache %></p>
  <p><%= form.hidden_field :url %></p>
  <p>企業名<%= @blog.title %></p>
  <p>事業内容<%= @blog.content %></p>
  <p><%= image_tag(@blog.image.url) %></p>
  <p>URL<%= @blog.url %></p>
  <p><%= form.submit  "登録する" %></p>
<% end %>

<%= form_with(model: @blog, url: new_blog_path, local: true, method: 'get') do |form| %>
  <p><%= form.hidden_field :title %></p>
  <p><%= form.hidden_field :content %></p>
  <p><%= form.submit "もどる", name: 'back' %></p>
<% end %>
</div>
